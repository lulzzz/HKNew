@model HKDB.Models.Application;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    <form asp-controller="MemberFunction"
          class="w-100 align-items-center justify-content-center d-flex flex-column flex-md-row px-2"
          style="height: calc(100vh - 70px);">

        <div class="col">
            <div class="row w-100 align-items-center justify-content-center m-0 mt-5 flex-column flex-sm-row">
                <h1 class="col-sm-4 col d-flex m-0 h-100 align-items-center justify-content-center">模型</h1>
                <div class=" col-md-5 col h-100 border-0 me-2 px-0 d-flex align-items-center justify-content-center">
                    <select asp-for="Model" class="form-select bg-body-secondary" type="text" style="font-size: 24pt;">
                        <option class="w-100" value="gpt-35-turbo" selected style="width: 100%;">gpt-35-turbo</option>
                        <option class="w-100" value="gpt-davinci-003" style="width: 100%;">gpt-davinci-003</option>
                        <option class="w-100" value="text-curie-001" style="width: 100%;">text-curie-001</option>
                        <option class="w-100" value="text-babbage-001" style="width: 100%;">text-babbage-001</option>
                        <option class="w-100" value="text-ada-001" style="width: 100%;">text-ada-001</option>
                    </select>
                </div>

            </div>
            <div class="row w-100 align-items-center justify-content-center m-0 mt-md-5 mt-2 flex-column flex-sm-row" style="height: 100px;">
                <h1 class="col-sm-4 col d-flex m-0 h-100 align-items-center justify-content-center">應用名稱*</h1>
                <input asp-for="ApplicationName" class="h-100 col-md-5 col rounded-pill bg-body-secondary border-0 md-50 me-2 px-5"
                       type="text" style="font-size: 36pt;">

            </div>
            <div class="row w-100 align-items-center justify-content-center m-0 mt-md-5 mt-2 flex-column flex-sm-row" style="height: 100px;">
                <h1 class="col-sm-4 col d-flex m-0 h-100 align-items-center justify-content-center">Maxtoken*</h1>
                <input asp-for="Parameter" class="h-100 col-md-5 col rounded-pill bg-body-secondary border-0 md-50 me-2 px-5"
                       type="text" style="font-size: 36pt;" value="1024">
            </div>
        </div>


        <div class="col-md-5 col align-items-center justify-content-center flex-column flex-sm-row p-md-3 mt-3 " style="height: 300px;">
            <h1 class="mb-5 col d-flex m-0 align-items-center justify-content-center">上傳檔案</h1>
            <input type="file" class="form-control" name="files" id="fileUpload" accept=".pdf,.csv,.txt,.json" multiple />
            <table class="w-100 mt-2">
                <tbody>
                    <tr>
                        <td class="border-1 d-flex align-items-center justify-content-between px-2" style="height: 80px;">
                            <h1>i am file</h1>
                            <button type="button" class="btn btn-outline-secondary h-50 p-1">
                                <img class="h-100" src="./image/trash-can.png" alt="">
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>



        <div class="w-100 justify-content-around row position-absolute"
             style="height:100px; bottom: 30px;">
            <input type="submit"
                   class="btn btn-primary col-md-3 col-5 h-100 rounded-pill d-flex align-items-center justify-content-center"
                   style="font-size: calc(1.375rem + 1vw);" value="創建">
            <a asp-action="Index" asp-controller="Home"
               class="btn btn-danger col-md-3 col-5 h-100 rounded-pill d-flex align-items-center justify-content-center">
                <h1>取消</h1>
            </a>
        </div>

    </form>

    <script>
        $('#rangeInput').on('input', function () {
            $('#rangeValue').text($(this).val());
        })
    </script>
</body>

</html>