@model HK_Project.ViewModels.EmailLSViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    <form asp-controller="UserLS" class="w-100 align-items-center justify-content-center d-flex flex-column" style="height: 100vh;">
        <div class="row w-100 align-items-center justify-content-center" style="height: 100px;">
            <label asp-for="Email" class="col-3 d-flex m-0 h-100 align-items-center justify-content-center"><h1 class="m-0">Email</h1></label>
            <input asp-for="Email" class="h-100 col-md-5 col rounded-pill bg-body-secondary border-0 md-50 me-2" type="text" style="font-size: calc(1.375rem + 1vw);">
        </div>
        <div class="w-100 justify-content-around row position-absolute" style="height:100px;margin-top: 80px; bottom: 30px;">
            <input type="submit" class="btn btn-primary col-md-3 col-5 h-100 rounded-pill d-flex align-items-center justify-content-center" style="font-size: calc(1.375rem + 1vw);" value="submit">
            <a asp-action="Show" asp-controller="Home" class="btn btn-danger col-md-3 col-5 h-100 rounded-pill d-flex align-items-center justify-content-center"><h1>取消</h1></a>
        </div>
    </form>

</body>

</html>