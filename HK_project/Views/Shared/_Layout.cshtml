<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HK_project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HK_project.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@900&display=swap" rel="stylesheet">
    <link href="/css/Home.css" rel="stylesheet">
</head>
<body>

    <div class="position-absolute w-100 h-100 d-flex align-items-center justify-content-center overflow-hidden"
         style="z-index: -1;" id="back">
        <div class=" p-0 d-flex position-relative align-items-center justify-content-center "
             style="height: 30vh;width: 30vh;">
            <a asp-controller="Home" asp-action="Index" title="Home"
               class="p-2 w-100 h-100 p-0 border-0 rounded-circle d-none HomeAnimate d-flex align-items-center justify-content-center"
               style="background-color: #d84dcc;z-index:20;text-decoration:none; " id="Home">
                <h1 class="m-0 p-1" style="font-family: 'Orbitron', sans-serif;font-size:3rem;color:#191338;">Home</h1>
            </a>
            <a asp-controller="LoginRegister" asp-action="Index" title="Member"
               class="p-2 border-0 position-absolute rounded-circle d-none LoginAnimate d-flex align-items-center justify-content-center"
               style="background-color: #48bee2;height: 16vh;width: 16vh;z-index: 10;color:#191338;text-decoration:none;"
               id="Login">
                <h2 class="m-0" style="font-family: 'Orbitron', sans-serif;text-align:center;">Log in</h2>
            </a>
            <a asp-controller="UserManage" asp-action="UserLoginSingup" title="User"
               class="p-2 border-0 position-absolute rounded-circle d-none AboutAnimate d-flex align-items-center justify-content-center"
               style="background-color: #48bee2;height: 16vh;width: 16vh; z-index: 9;color:#191338;text-decoration:none;"
               id="About">
                <h2 class="m-0" style="font-family: 'Orbitron', sans-serif;text-align:center;">User</h2>
            </a>
            <a asp-controller="" asp-action="" title="Q&A"
               class=" p-2 border-0 position-absolute rounded-circle d-none QAAnimate d-flex align-items-center justify-content-center "
               style="background-color: #48bee2;height: 16vh;width: 16vh;z-index: 8;color:#191338;text-decoration:none;"
               id="QA">
                <h2 class="m-0" style="font-family: 'Orbitron', sans-serif;text-align:center;">QA Bot</h2>
            </a>
        </div>
    </div>
    <header class="w-100 row align-items-center px-md-4 px-2 m-0 justify-content-between position-fixed top-0"
            style="height:70px; background-color: #191338; z-index: 99;">
        <h1 class="fw-bolder w-auto m-0" style="color: #9a53D0;font-family: 'Orbitron', sans-serif;">QA Bot</h1>
		<div class="w-auto d-flex gap-sm-5 p-0">
            <div
               class="btn btn w-100 rounded-3 d-flex align-items-center justify-content-center overflow-hidden"
               style=" background-color: #fa435c;">
         
                <h2 style="font-family: 'Orbitron', sans-serif;" class="fw-bolder w-auto m-0">
                    P003

                </h2>
            </div>
            <button title="List" class=" w-auto btn rounded-3 border-5" style="border-color:#9a53D0" id="OpenList">
                <img style="height:1.25rem;" src="/assets/List.png" alt=" ">
            </button>
        </div>
    </header>
    <div class="w-100" style="height: 70px;"></div>
        @RenderBody()

    <footer>
    </footer>
    <script>
        var list = document.getElementById("OpenList");
        var Login = document.getElementById("Login");
        var Home = document.getElementById("Home");
        var About = document.getElementById("About");
        var QA = document.getElementById("QA");
        var back = document.getElementById("back");
        list.addEventListener("click", function () {

            if (back.style.zIndex == 99) {
                back.style.zIndex = -1;
                back.style.backgroundColor = "#25242700";
            }
            else {
                back.style.zIndex = 99;
                back.style.backgroundColor = "#252427d7";
            }
            Home.classList.toggle("d-none");
            Login.classList.toggle("d-none");
            About.classList.toggle("d-none");
            QA.classList.toggle("d-none");

        })
        back.addEventListener("click", function () {
            back.style.backgroundColor = "#25242700";
            back.style.zIndex = -1;
            Home.classList.toggle("d-none");
            Login.classList.toggle("d-none");
            About.classList.toggle("d-none");
            QA.classList.toggle("d-none");
        })
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"
            integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
            integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
            crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
